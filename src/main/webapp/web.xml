<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>internetshop.controllers.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>internetshop.controllers.InjectDataController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/injectData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>internetshop.controllers.users.UsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>internetshop.controllers.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>internetshop.controllers.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>internetshop.controllers.users.DeleteUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>internetshop.controllers.product.AddProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>internetshop.controllers.product.DeleteProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>internetshop.controllers.product.GetAllProductsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productsAdminPage</servlet-name>
        <servlet-class>internetshop.controllers.product.GetAdminPageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productsAdminPage</servlet-name>
        <url-pattern>/products/adminPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>internetshop.controllers.shoppingcart.AddToShoppingCart</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/shoppingCart/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getShoppingCart</servlet-name>
        <servlet-class>internetshop.controllers.shoppingcart.GetAllShoppingCartsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getShoppingCart</servlet-name>
        <url-pattern>/shoppingCart/get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductFromCart</servlet-name>
        <servlet-class>internetshop.controllers.shoppingcart.DeleteFromShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteProductFromCart</servlet-name>
        <url-pattern>/shoppingCart/deleteProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>completeOrder</servlet-name>
        <servlet-class>internetshop.controllers.order.CompleteOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>completeOrder</servlet-name>
        <url-pattern>/orders/completeOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrders</servlet-name>
        <servlet-class>internetshop.controllers.order.GetAllOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allOrders</servlet-name>
        <url-pattern>/orders/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getOrderInfo</servlet-name>
        <servlet-class>internetshop.controllers.order.GetOrderInfoController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getOrderInfo</servlet-name>
        <url-pattern>/orders/orderInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrder</servlet-name>
        <servlet-class>internetshop.controllers.order.DeleteOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteOrder</servlet-name>
        <url-pattern>/orders/delete</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>internetshop.web.filters.AuthenticationFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
</web-app>
